		override public function update():void
		{
			player.acceleration.x = 0;
			if (FlxG.keys.LEFT)
				player.acceleration.x = -player.maxVelocity.x * 4;
			if (FlxG.keys.RIGHT)
				player.acceleration.x = player.maxVelocity.x * 4;
			if ((FlxG.keys.UP || FlxG.keys.SPACE) && player.isTouching(FlxObject.FLOOR))
				player.velocity.y = -player.maxVelocity.y / 2;
			
			super.update();
			
			FlxG.overlap(player, coins, killCoin)
			
			FlxG.collide(level, player);
			FlxG.collide(level, coins);
			
			if (coins.countDead() == coins.length) {
				add(exit);	
			}
			
			if (FlxG.overlap(player, exit)) {
				add(new FlxText(FlxG.width / 2, FlxG.height / 2, 100, "YOU WIN! Jump has been upgraded"));
				player.maxVelocity.y = 600;
				player.acceleration.y = 50;
				exit.kill();
				for (var i:int = 0; i < coins.length; i++) {
					coins.members[i].revive();
				}
			}
		}
		
